<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="resources/style.css">
    <title>Codebar 2.0</title>
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
  </head>
  <body >
    <%- include('navbar') %> 
      <% if (login) { %>    
          <div class="contenedor-navbar">  
              <div>
                <div class="generador">
                  <h2>Generador de barras Bulk</h2>
                </div>
                
                <div class="panel-gen">
                  <div class="row align-items-start">
                    <div class="panel-search col">
                      <form class="search-form" method="POST" action="/search-update">
                        <label class="lbl-search" for="searchArt">ARTICULO</label><br>
                        <input type="text" id="art" name="searchArt" maxlength="8" minlength="8" required>
                        <input class="btn-search" type="submit" value="BUSCAR">
                      </form>
                      <a href="clear-2"> <button class="btn-search"> NUEVA BUSQUEDA</button></a>
                    </div>
                    <%if (typeof cod != 'undefined') {%> 
                      <div class="panel-codebar col">
                        <div>
                            <svg id="barcode"></svg>
                          <script>
                              JsBarcode("#barcode", "<%= cod %>", {
                              format:"EAN13",
                              displayValue:true,
                              fontSize:24,
                              width:3,
                              lineColor: "#000"
                              });
                          </script>
                            <form action="/imprimirBundle" method="POST">
                              <div >
                                <textarea class="textarea" name="textarea" type="input" readonly style="resize: none;" rows="3" cols="45"><%= des %></textarea>
                                <input type="text" name="codigo" value="<%= cod %>" hidden>  
                                <input type="submit" class="btn-imprimir"value="IMPRIMIR">                    
                            </div>
                            </form>
                        </div>
                      </div>                 
                  </div>
                </div>
              </div>     
          </div>
            <div class="actualizar">
                <div class="generador">
                    <h3>Actualizar Datos</h3>
                </div>
                <div class="container form-des">
                    <form action="/update-bundle" method="POST">
                        <div class="row align-items-start">
                            <%if (typeof cod != 'undefined') {%>
                            <div class="col">
                                <label for="articulo">Articulo</label><br>
                                <input readonly type="text" name="articulo" value="<%= art %>">
                            </div>
                            <div class="col">
                                <label for="codigo">Codigo</label><br>
                                <input type="text" name="codigo" maxlength="13" minlength="13" value="<%= cod %>">
                            </div>
                            <div class="col">
                                <label for="descripcion">Descripcion</label><br>
                                <input type="text"  name="descripcion" value="<%= des %>">
                            </div>
                            <div class="col">
                                <input type="submit" class="btn-search" value="ACTUALIZAR">
                            </div>
                            <%}%>
                        </div>
                    </form>
                    <%}%>
                </div>
            </div>  
       <%} %> 
  </body>
</html>

   