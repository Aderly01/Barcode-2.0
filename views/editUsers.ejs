      <div class="container">
            <form action="/update" method="POST">
                <input type="text" id="id" name="id"  hidden value="<%=usere.id%>">
                <div class="row align-items-start" >
                <div class="mb-3 mt-3 col" style="font-family: Georgia, 'Times New Roman', Times, serif;">
                  <label for="user" class="form-label" style="font-weight: bold;">User</label>
                  <input type="text" class="form-control" name="user" id="user"  required tabindex="1" value="<%=usere.user%>" >
                </div>
                <div class="mb-3 mt-3 col">
                    <label for="name" class="form-label" style="font-weight: bold;">Full name</label>
                    <input type="text" class="form-control" name="name" id="name" required tabindex="2" value="<%=usere.name%>" >
                </div>
                <div class="mb-3 mt-3 col">
                    <label for="rol" class="form-label" style="font-weight: bold;">rol</label>
                    <select class="form-select" name="rol" id="rol" tabindex="3">
                        <option <%= usere.rol == 'admin' ? "selected" : '' %> value="admin" >Admin</option>
                        <option <%= usere.rol == 'user' ? "selected" : '' %> value="user" >User</option>
                      </select>
                </div>
                <div class="mb3 mt-3 col">
                    <label for="pass" class="form-label" style="font-weight: bold;">Password</label>
                    <input type="password" name="pass" class="form-control" id="pass" required tabindex="4">
                </div>
                <div class="container">
                    <button type="submit" class="btn btn-primary">ACTUALIZAR</button>
                </div>
              </form>
          </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
