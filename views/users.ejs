<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="resources/style.css">
    <title>Codebar 2.0</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
<body>
    <%- include('navbar') %>
    <% if (login) { %> 
    <div class="actualizar">
        <div class="generador">
            <h3>REGISTRAR USUARIO</h3>
        </div>
        <div class="container form-des">
            <form action="/register" method="POST">
                <div class="row align-items-start">
                    <input type="text" id="id" name="id" hidden value="">
                    <div class="col">
                        <label for="user">User</label>
                        <input type="text" name="user" required tabindex="1" autofocus>
                    </div>
                    <div class="col">
                        <label for="user">Full Name</label>
                        <input type="text" name="name" required tabindex="2">
                    </div>
                    <div class="col">
                        <label for="rol">Rol</label>                          
                        <select id="rol" name="rol" class="select-css" tabindex="3">
                            <option value="admin" selected>Admin</option>
                            <option value="user">user</option>                    
                        </select>
                    </div>
                    <div class="col">
                        <label for="pass">Password</label><br> 
			            <input type="password" name="pass" required tabindex="4">
                    </div>
                    <div class="col">
                        <input type="submit" class="btn-search" value="Registrar">
                    </div>
                </div>
            </form>
        </div>
        <table class="container table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">USER</th>
                    <th scope="col">FULL NAME</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Accion</th>
                </tr>
            </thead>
            <tbody>
                <% if(typeof users != 'undefined') {%>
                <%users.forEach((user) => {%>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.user %></td>
                    <td><%= user.name %></td>
                    <td><%= user.rol %></td>
                    <td>
                        <a href="/edit/<%=user.id%>"><button class="btn2"><i class="fa fa-edit"></i></button></a>
                        <a href="/delete/<%=user.id%>"><button class="btn1"><i class="fa fa-trash"></i></button></a>
                    </td>
                </tr>
                <%})%> 
                <%}%>
            </tbody>
        </table>
    </div>
    <%} %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>